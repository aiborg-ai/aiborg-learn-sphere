# Application URL (used for authentication redirects)
VITE_APP_URL=http://localhost:8080

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI Configuration (for AI features: embeddings, semantic search)
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding Provider Configuration
# Options: 'openai' (requires API key, costs money) or 'ollama' (free, local)
VITE_EMBEDDING_PROVIDER=ollama
# Ollama embedding model (if using Ollama)
# Options: nomic-embed-text (768 dims), mxbai-embed-large (1024 dims)
VITE_OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Feature Flags
# Enable adaptive assessment (CAT - Computerized Adaptive Testing)
# Set to 'true' for adaptive assessment, 'false' for standard assessment
VITE_USE_ADAPTIVE_ASSESSMENT=true

# Enable knowledge graph features (prerequisite checking, skill tracking, recommendations)
# Set to 'true' to enable knowledge graph integration, 'false' to disable
# Default: true
VITE_USE_KNOWLEDGE_GRAPH=true

# Enable Lesson on Demand AI-powered lesson generation feature
# Set to 'true' to enable, 'false' to disable
# Requires Ollama with llama3.3:70b model
# Default: true
VITE_ENABLE_LESSON_ON_DEMAND=true

# Ollama Configuration
# Ollama API host URL (default: http://localhost:11434)
VITE_OLLAMA_HOST=http://localhost:11434
# Ollama model to use (default: llama3.3:70b)
# Available models: llama3.3:70b, llama3.1:8b, mistral:7b, phi3.5:3.8b, etc.
# Note: llama3.3:70b recommended for Lesson on Demand feature
VITE_OLLAMA_MODEL=llama3.3:70b

# Logging Configuration
# Log level: debug, info, warn, error, none (default: debug in dev, warn in prod)
VITE_LOG_LEVEL=debug
# Enable/disable all logging (default: true in dev, false in prod)
VITE_ENABLE_LOGS=true

# Google AdSense Configuration
# Enable/disable AdSense ads globally (default: false in dev, true in prod)
VITE_ENABLE_ADSENSE=false
# Your Google AdSense Publisher ID (e.g., ca-pub-1234567890123456)
# Get this from: https://www.google.com/adsense/
VITE_ADSENSE_PUBLISHER_ID=
# Ad slots for different placements (get these after creating ad units in AdSense)
VITE_ADSENSE_BLOG_SLOT=
VITE_ADSENSE_DASHBOARD_SLOT=
VITE_ADSENSE_ASSESSMENT_SLOT=

# Error Tracking (Sentry)
# Get your DSN from: https://sentry.io/ (after creating a project)
# Enable error reporting (default: false in dev, true in prod)
VITE_ENABLE_ERROR_REPORTING=false
# Sentry DSN for error tracking (leave empty to disable)
VITE_SENTRY_DSN=
# Application version for release tracking
VITE_APP_VERSION=1.0.0

# Example values (replace with your actual values):
# For local development:
# VITE_APP_URL=http://localhost:8080
#
# For production (Vercel):
# VITE_APP_URL=https://your-app-name.vercel.app
#
# Supabase credentials (GET THESE FROM YOUR SUPABASE PROJECT):
# VITE_SUPABASE_URL=https://your-project-id.supabase.co
# VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
#
# SECURITY NOTES:
# - NEVER commit actual credentials to git
# - NEVER share your .env.local or .env.production files
# - NEVER include real API keys in this example file
# - Use Vercel environment variables for production secrets
# - Rotate credentials immediately if accidentally exposed